generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Agent {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  description String?
  purpose   String
  features  String[] // Array of feature strings
  tier      String   // scout, ranger, commander, overlord
  
  // Customer info
  customerName  String? @map("customer_name")
  customerEmail String? @map("customer_email")
  
  // Devin integration fields
  devinSessionId   String? @map("devin_session_id")
  devinUrl         String? @map("devin_url")
  status           String  @default("pending") // pending, deploying, live, error, stopped
  deployedAt       DateTime? @map("deployed_at")
  
  // Payment reference
  paymentSessionId String? @map("payment_session_id")
  
  // Legacy field (kept for compatibility)
  sessionId String? @map("session_id")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  @@index([status])
  @@index([devinSessionId])
  @@index([paymentSessionId])
  @@index([slug])
  @@map("agents")
}

model Payment {
  id          String    @id @default(cuid())
  sessionId   String    @map("session_id")
  tier        String
  currency    String
  amount      Float
  address     String
  status      String    @default("pending") // pending, confirming, confirmed, expired
  txHash      String?   @map("tx_hash")
  confirmedAt DateTime? @map("confirmed_at")
  expiresAt   DateTime  @map("expires_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  
  @@index([sessionId])
  @@index([address])
  @@index([status])
  @@map("payments")
}
