generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Agent {
  id        String   @id @default(cuid())
  sessionId String   @map("session_id")
  name      String
  purpose   String
  features  String   // JSON array of features
  tier      String   // starter, pro, enterprise
  
  // Devin integration fields
  devinSessionId String? @map("devin_session_id")
  devinUrl       String? @map("devin_url")
  status         String  @default("pending") // pending, deploying, active, error
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  @@index([sessionId])
  @@index([status])
  @@map("agents")
}

model Payment {
  id          String    @id @default(cuid())
  sessionId   String    @map("session_id")
  tier        String
  currency    String
  amount      Float
  address     String
  status      String    @default("pending") // pending, confirming, confirmed, expired
  txHash      String?   @map("tx_hash")
  confirmedAt DateTime? @map("confirmed_at")
  expiresAt   DateTime  @map("expires_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  
  @@index([sessionId])
  @@index([address])
  @@index([status])
  @@map("payments")
}

// Pre-generated encrypted wallet pool for USDH payments
model WalletPool {
  id                  String    @id @default(cuid())
  address             String    @unique
  encryptedPrivateKey String    @map("encrypted_private_key")
  status              String    @default("available") // available, assigned, used
  assignedToSession   String?   @map("assigned_to_session")
  assignedAt          DateTime? @map("assigned_at")
  createdAt           DateTime  @default(now()) @map("created_at")
  
  @@index([status])
  @@index([assignedToSession])
  @@map("wallet_pool")
}
