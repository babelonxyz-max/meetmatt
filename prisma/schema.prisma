generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Agent {
  id                 String    @id @default(cuid())
  sessionId          String?   @map("session_id")
  name               String
  purpose            String
  tier               String
  devinSessionId     String?   @map("devin_session_id")
  devinUrl           String?   @map("devin_url")
  status             String    @default("pending")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")
  customer_email     String?
  customer_name      String?
  deployed_at        DateTime?
  description        String?
  payment_session_id String?
  slug               String    @unique
  features           String[]
  userId             String?   @map("user_id")
  user               User?     @relation(fields: [userId], references: [id])
  subscriptionStatus String    @default("trial") @map("subscription_status")
  subscriptionType   String    @default("monthly") @map("subscription_type")
  currentPeriodStart DateTime? @map("current_period_start")
  currentPeriodEnd   DateTime? @map("current_period_end")
  cancelAtPeriodEnd  Boolean   @default(false) @map("cancel_at_period_end")
  lastPaymentId      String?   @map("last_payment_id")

  // Bot activation fields
  activationStatus String    @default("pending") @map("activation_status") // pending, activating, awaiting_verification, active, failed
  botUsername      String?   @map("bot_username")
  telegramLink     String?   @map("telegram_link")
  authCode         String?   @map("auth_code")
  verifiedAt       DateTime? @map("verified_at")
  telegramUserId   String?   @map("telegram_user_id")

  @@index([status])
  @@index([devinSessionId])
  @@index([payment_session_id])
  @@index([slug])
  @@index([userId])
  @@index([activationStatus])
  @@map("agents")
}

model Payment {
  id          String    @id @default(cuid())
  sessionId   String    @map("session_id")
  tier        String
  currency    String
  amount      Float
  address     String
  status      String    @default("pending")
  txHash      String?   @map("tx_hash")
  confirmedAt DateTime? @map("confirmed_at")
  expiresAt   DateTime  @map("expires_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  userId      String?   @map("user_id")

  @@index([sessionId])
  @@index([address])
  @@index([status])
  @@index([userId])
  @@map("payments")
}

model WalletPool {
  id                  String    @id @default(cuid())
  address             String    @unique
  encryptedPrivateKey String    @map("encrypted_private_key")
  status              String    @default("available")
  assignedToSession   String?   @map("assigned_to_session")
  assignedAt          DateTime? @map("assigned_at")
  createdAt           DateTime  @default(now()) @map("created_at")
  hyperBalance        String    @default("0") @map("hyper_balance")
  pmApproved          Boolean   @default(false) @map("pm_approved")

  @@index([status])
  @@index([assignedToSession])
  @@map("wallet_pool")
}

model User {
  id               String    @id @default(cuid())
  privyId          String    @unique @map("privy_id")
  email            String?
  walletAddress    String?   @map("wallet_address")
  name             String?
  avatar           String?
  stripeCustomerId String?   @map("stripe_customer_id")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  lastLoginAt      DateTime? @map("last_login_at")

  // Relations
  agents Agent[]

  @@index([email])
  @@index([walletAddress])
  @@index([stripeCustomerId])
  @@map("users")
}


